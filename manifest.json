{
    "name": "楽天レシピ・ワンクリックサーチ",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "ワンクリックで楽天レシピで人気のレシピを紹介してくれる拡張機能",
    "content_security_policy": "script-src 'self' https://app.rakuten.co.jp;  object-src 'self'",
    "browser_action": {
        "default_icon":  "icons/icon.jpg",
        "default_popup": "show_recipe.html"
    },
    "permissions": [ "tabs", "https://app.rakuten.co.jp/*", "http://app.rakuten.co.jp/*", "http://*/*", "https://*/*" ],
    "web_accessible_resources": [
        "show_recipe.html"
    ]
}
